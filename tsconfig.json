{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "main.ts"
  ],
  "exclude": [
    "lib/ui/backup/**"
  ]
}